<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8"
            fx:controller="SGA.Controller.gestor.OrdemTransporteController">
    <Text layoutX="170.0" layoutY="48.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Ordem de transporte">
        <font>
            <Font size="30.0"/>
        </font>
    </Text>

    <CheckBox fx:id="entrega" layoutX="180.0" layoutY="100.0" mnemonicParsing="false" prefHeight="18.0"
              prefWidth="261.0"
              text="Entrega"/>
    <CheckBox fx:id="recolha" layoutX="180.0" layoutY="137.0" mnemonicParsing="false" text="Recolha"/>
    <TextField fx:id="seccao" layoutX="180.0" layoutY="173.0" prefHeight="27.0" prefWidth="261.0" promptText="Secção"/>
    <TextField fx:id="prateleira" layoutX="180.0" layoutY="221.0" prefHeight="27.0" prefWidth="261.0"
               promptText="Prateleira"/>

    <Button layoutX="180.0" layoutY="307.0" mnemonicParsing="false" onMouseReleased="#criarOrdemTransporte"
            prefHeight="27.0" prefWidth="261.0" text="Fazer Pedido"/>

    <Button fx:id="back" layoutY="1.0" mnemonicParsing="false" onMouseReleased="#back" prefHeight="6.0" prefWidth="42.0"
            style="-fx-background-color: #f3f3f3;" text="&lt;-"/>
</AnchorPane>
